<resources xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Estilo do titulo do jogo -->
    <style name="GameTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffbb33</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    
<!-- Estilo dos botoes do menu inicial -->
    <style name="MenuButtom">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/botao</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">10</item>
    </style>
    
</resources>
